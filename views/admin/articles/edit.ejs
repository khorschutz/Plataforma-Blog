<%- include ("../../partials/header.ejs") %>
<%- include ("../../partials/navbar.ejs") %>
<body>
    <div class="container">
        <br>
        <div class="card">
            <div class="card-header">
                <h2>Edição de Artigos</h2>
            </div>
            <div class="card-body">
                <form method="POST" action="/articles/update">
                    <input type="hidden" value="<%= article.id %>" name="id">
                    <input class="form-control" type="text" name="title" placeholder="Defina o título do artigo" value="<%= article.title %>">
                    <br>
                    <textarea class="form-control" name="body" id="article" placeholder="Escreva seu artigo aqui"><%= article.body %></textarea>
                    <br>
                    <label>Categoria</label>
                    <select name="category" class="form-control">
                        <% categories.forEach((category) => { %>

                            <% if(category.id == article.categoryId) { %>
                                <option value="<%= category.id %>" selected><%= category.title %></option>
                            <% } else { %>
                                <option value="<%= category.id %>"><%= category.title %></option>
                            <% } %>
                            
                        <% }) %>
                    </select>
                    <br>
                    <button class="btn btn-dark">Atualizar</button>
                </form>
            </div>
        </div>
    </div>
    
</body>
<%- include ("../../partials/footer.ejs") %>


<script src="https://cdn.tiny.cloud/1/no-api-key/tinymce/5.8.2-114/langs/pt_BR.js"></script>
<script src="/tinymce/tinymce.min.js"></script>

<script>
    tinymce.init({
        language: "en",
        selector: "#article",
        // branding: false, #para remover que é oferecido por Tiny
        plugins: [
            "advlist autolink link imagem lists print preview hr searchreplace wordcount fullscreen insertdatatime media save table paste emoticons"
        ]
    })
</script>